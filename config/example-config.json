{
  "_comment": "SECURITY: Review docs/security.md before deploying. Never commit this file with real keys.",

  "gateway": {
    "port": 18860,
    "host": "127.0.0.1",
    "authToken": "CHANGE_ME_USE_openssl_rand_-hex_32"
  },

  "agent": {
    "name": "agent",
    "model": "anthropic/claude-sonnet-4-20250514",
    "defaultModel": "anthropic/claude-sonnet-4-20250514",
    "thinkingModel": "anthropic/claude-opus-4-5",
    "workspace": "./workspace",
    "contextFiles": ["AGENTS.md", "TOOLS.md"],
    "maxTokens": 8192,
    "temperature": 0.7
  },

  "exec": {
    "_comment": "SECURITY: Use allowlist mode to restrict command execution",
    "security": "allowlist",
    "allowlist": [
      "ls", "cat", "head", "tail", "grep", "find",
      "git status", "git log", "git diff",
      "date", "whoami", "pwd"
    ],
    "ask": "on-miss"
  },

  "channels": {
    "whatsapp": {
      "enabled": true,
      "provider": "whatsapp-web",
      "sessionPath": "./data/whatsapp-session",
      "allowedNumbers": [
        "+1YOUR_PHONE_NUMBER"
      ],
      "defaultTarget": "+1YOUR_PHONE_NUMBER"
    }
  },

  "plugins": {
    "voice-call": {
      "enabled": false,
      "_comment": "Enable after reviewing voice-agent.md setup guide",
      "provider": "telnyx",
      "apiKey": "${TELNYX_API_KEY}",
      "connectionId": "${TELNYX_CONNECTION_ID}",
      "phoneNumber": "+1YOUR_TELNYX_NUMBER",
      "webhookUrl": "https://YOUR_DOMAIN/voice/webhook",
      "tts": {
        "provider": "elevenlabs",
        "apiKey": "${ELEVENLABS_API_KEY}",
        "voiceId": "${ELEVENLABS_VOICE_ID}",
        "model": "eleven_turbo_v2_5"
      },
      "stt": {
        "provider": "deepgram",
        "apiKey": "${DEEPGRAM_API_KEY}",
        "model": "nova-2"
      },
      "conversation": {
        "mode": "conversation",
        "maxDurationSeconds": 600,
        "silenceTimeoutMs": 2000,
        "greeting": "Hi, this is your AI agent. How can I help you today?"
      }
    },

    "tts": {
      "enabled": false,
      "provider": "openai",
      "voice": "echo"
    },

    "email": {
      "enabled": false,
      "_comment": "Enable after reviewing email-integration.md",
      "imap": {
        "host": "imap.YOUR_PROVIDER.com",
        "port": 993,
        "user": "${EMAIL_USER}",
        "password": "${EMAIL_PASSWORD}"
      },
      "send": {
        "method": "api",
        "provider": "YOUR_PROVIDER",
        "apiKey": "${EMAIL_API_KEY}",
        "fromAddress": "you@example.com",
        "fromName": "Your Agent"
      }
    },

    "browser": {
      "enabled": true,
      "headless": true
    },

    "calendar": {
      "enabled": false,
      "provider": "google",
      "credentialsPath": "./data/google-credentials.json",
      "calendarId": "primary"
    }
  },

  "cron": {
    "heartbeat": {
      "schedule": "*/30 * * * *",
      "prompt": "Read HEARTBEAT.md if it exists (workspace context). Follow it strictly. Do not infer or repeat old tasks from prior chats. If nothing needs attention, reply HEARTBEAT_OK.",
      "channel": "whatsapp"
    }
  },

  "llm": {
    "_comment": "SECURITY: Use environment variables, not hardcoded keys",
    "anthropic": {
      "apiKey": "${ANTHROPIC_API_KEY}"
    },
    "openai": {
      "apiKey": "${OPENAI_API_KEY}"
    }
  },

  "security": {
    "allowedUsers": ["+1YOUR_PHONE_NUMBER"],
    "rateLimiting": {
      "maxRequestsPerMinute": 30,
      "maxTokensPerHour": 500000
    }
  }
}
